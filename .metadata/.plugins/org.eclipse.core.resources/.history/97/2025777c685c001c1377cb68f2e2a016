 * @brief          : GPIO - Driver
 ******************************************************************************
 */

#include "stm32f4xx.h"
#include <stdint.h>
#include <stdio.h>
#include "adc.h"
#include "systick.h"


#define GPIOAEN  		(1U<<0)
#define PIN5			(1U<<5)

#define LED_PIN			PIN5

int main (void)
{

	/* Enable clock access to GPIOA */

	RCC->AHB1ENR |= GPIOAEN;

	/* Set PA5 as output pin */

	GPIOA->MODER |= (1U<<10);
	GPIOA->MODER &= ~(1U<<11);


	start_conversion();

	while(1)
	{

		//sensor_value = adc_read();
		//printf("A second just passed !!");
		GPIOA->ODR ^= LED_PIN;
		systickDelayMs(1000);


	}
}

