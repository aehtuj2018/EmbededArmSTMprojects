#include "stm32f4xx.h"

#define GPIOAEN 					(1U<<0)
#define ADC1EN 						(1U<<8)






void pal_adc_init(void)
{
	/**************** Configure the ADC GPIO pin ***********/

	RCC->AHB1ENR |= GPIOAEN;

	GPIOA->MODER |= (1U<<3);
	GPIOA->MODER |= (1U<<2);

	/************** Enable clock access to GPIOF ****************/

	RCC->APB2ENR |= ADC1EN;

	/************** Set the mode PF3 to analog *****************/

	/************* Enable clock access to ADC ********************/

	/**************** Configure ADC parameters  ***********/
}

